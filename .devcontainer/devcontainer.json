{
  "name": "mcp-copilot-sandbox",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {},
  "forwardPorts": [3000],
  "remoteEnv": {
    "MCP_SERVER_URL": "http://localhost:3000"
  },
  "postCreateCommand": "bash -lc 'npm install -g @modelcontextprotocol/cli && mkdir -p .vscode && cp .devcontainer/settings.json .vscode/settings.json'",
  "customizations": {
    "vscode": {
      "extensions": ["GitHub.copilot", "your-org.mcp-bridge-extension"],
      "settings": {
        "mcp.configPath": "${workspaceFolder}/mcp.json"
      }
    }
  }
}
