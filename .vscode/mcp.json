{
	"servers": {
		"polarionmcp-demo": {
			"command": "uvx",
			"args": [
				"polarion-mcp==2.0.0"
			],
			"env": {
				"POLARION_BASE_URL": "${input:base_url}"
			},
			"type": "stdio"
		}
	},
	"inputs": [
		{
			"id": "base_url",
			"type": "promptString",
			"description": "POLARION_BASE_URL (leave blank to use default http://dev.polarion.atoms.tech/polarion)"
		}
	]
}